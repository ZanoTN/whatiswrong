{
  "i18n-ally.localesPaths": ["config/locales/**/*.yml"],
  "ruby.lsp.enable": true,
  "rubyLsp.enabled": true,
  "rubyLsp.formatter": "rubocop",
  "rubyLsp.bundleGemfile": true,
  "rubyLsp.diagnostics": true,
  "rubyLsp.indexing": {
    "excludedPatterns": ["node_modules", "vendor", "tmp", "log"]
  },
  "files.associations": {
    "*.html.erb": "erb"
  }
}
