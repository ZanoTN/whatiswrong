<div class="position-fixed top-0 end-0 px-3 pt-3" style="z-index: 4055;">
  <% flash.each do |key, message| %>
    <div class="alert alert-important alert-<%= key == 'notice' ? 'success' : 'danger' %> toast-out-animation" role="alert">
      <div class="alert-icon my-auto">
        <!-- Download SVG icon from http://tabler.io/icons/icon/check -->

        <% if key == "notice" %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
               viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round"
               class="icon alert-icon icon-2">
            <path d="M5 12l5 5l10 -10" />
          </svg>
        <% else %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
               viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round"
               class="icon alert-icon icon-2">
            <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
            <path d="M12 8v4" />
            <path d="M12 16h.01" />
          </svg>
        <% end %>
      </div>
      <div>
        <% if key == "notice" %>
          <h4 class="alert-heading text-uppercase"><%= t("general.success") %></h4>
        <% else %>
          <h4 class="alert-heading text-uppercase"><%= t("general.error") %></h4>
        <% end %>
        <div class="alert-description">
          <%= message %>
        </div>
      </div>
    </div>
  <% end %>
</div>