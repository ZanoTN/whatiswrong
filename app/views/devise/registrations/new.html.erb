<div class="card bg-base-100 w-96 shadow-sm p-6 mx-auto mt-10">
  <p class="text-3xl font-bold mb-4">Sign Up</p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="w-full">

      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label :username, class: "label mb-2" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input mb-4 w-full" %>

      <%= f.label :password, class: "label mb-2" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input mb-4 w-full" %>

      <%= f.label :password_confirmation, class: "label mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input mb-4 w-full" %>

      <%= f.submit "Sign up", class: "btn btn-primary w-full mt-4" %>
    </div>
  <% end %>

  <%# render "devise/shared/links" %>
</div>