
<div class="card bg-base-100 w-96 shadow-sm p-6 mx-auto mt-10">
  <p class="text-3xl font-bold mb-4">Log in</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="w-full">
      <%= f.label :username, class: "label mb-2" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input mb-4 w-full" %>

      <%= f.label :password, class: "label mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input mb-4 w-full" %>

      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me, class: "toggle mr-2 toggle-primary" %>
        <%= f.label :remember_me, class: "label" %>
      <% end %>

      <%# render "devise/shared/links" %>

      <%= f.submit "Log in", class: "btn btn-primary w-full mt-4" %>
    </div>
  <% end %>
</div>