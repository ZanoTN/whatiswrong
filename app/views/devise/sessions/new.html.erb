<div class="w-max-device-form mx-auto mt-6 card p-4">
  <div class="d-flex mb-4 align-items-center gap-3 justify-content-center">
    <img src="/icon.png" alt="WhatIsWrong" class="navbar-brand-image" style="height: 48px; width: 48px;" />
    <h1 class="my-auto display-4 fw-bold">WhatIsWrong</h1>
  </div>


  <p class="h1 mb-4"><%= t("custom.auth.login") %></p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="w-full">
      <%= render "layouts/form_errors", model: resource %>

      <%= f.label :username, class: "form-label mb-2" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control mb-4" %>

      <%= f.label :password, class: "form-label mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-4" %>

      <% if devise_mapping.rememberable? %>
        <label class="form-check form-switch">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </label>
      <% end %>

      <%# render "devise/shared/links" %>

      <%= f.submit t("custom.auth.login"), class: "btn btn-primary w-full mt-4" %>
    </div>
  <% end %>
</div>